@model System.Collections.Generic.List<PFRCentr.App.MvcClient.Models.Dto.CertificateDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Certificates</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateCertificate" class="btn btn-outline-primary">
                <i class="fas fa-plus">Create new Certificate</i>
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Category Description
            </th>
            <th>
                Category Serial
            </th>
            <th>
                Category Number
            </th>
            <th>
                actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>@item?.AddedDate</td>

                <td>@item?.ExpiredDate</td>

                <td>@item?.ExternalId</td>

                <td>@item?.CustomerId</td>
                <td> 
                    <a asp-action="EditCertificate" class="btn btn-success" 
                       asp-controller="Certificate" asp-route-certificateId="@item.Id">
                        <i class="fas fa-edit"/>
                    </a>
                    <a asp-action="DeleteCertificate"  class="btn btn-danger"
                       asp-controller="Certificate" asp-route-certificateId="@item.Id">
                        <i class="fas fa-trash"/>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}