            </div>
            
             <div class="col-2">
                            <label asp-for="CustomerId" class="control-label pt-2" style="font-size:20px;"></label>
             </div>
            <div class="col-10 pb-3">
                <input asp-for="CustomerId" class="form-control"/>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>
        <hr/>
    </div>
