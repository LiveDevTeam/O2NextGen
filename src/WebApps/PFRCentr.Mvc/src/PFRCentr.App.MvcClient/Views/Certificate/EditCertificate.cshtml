@model PFRCentr.App.MvcClient.Models.Dto.CertificateDto
<form asp-action="EditCertificate">
    <input asp-for="Id" hidden/>
    <br/>
    <div class="container border p-3">
        <h1 class="text-primary">Edit Category</h1>
        <hr/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="CreatorId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CreatorId" class="form-control"/>
                <span asp-validation-for="CreatorId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="CategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryId" class="form-control"/>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ExternalId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ExternalId" class="form-control"/>
                <span asp-validation-for="ExternalId" class="text-danger"></span>
            </div>

